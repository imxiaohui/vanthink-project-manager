<div class="view-wrapper">
  <div class="view block">
    <div class="system-info">
      <p id="notice"><%= notice %></p>
    </div>
    <div class="block-header">
      <div><h4>Project Info</h4></div>
      <div class="split-line"></div>
    </div>
    <div class="box-left">
      <div class="entry-edit">
        <div class="entry-edit-head">
          <h4>User Base Info</h4>
        </div>
        <div class="fieldset">
          <table class="form-list">
            <tr>
              <td class="label">Name:</td>
              <td class="value"><%= @project.name %></td>
            </tr>
            <tr>
              <td class="label">Remark:</td>
              <td class="value"><%= @project.remark %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div class="box-right">
      <div class="entry-edit">
        <div class="entry-edit-head">
          <h4>Work Hours</h4>
        </div>
        <div class="fieldset">
          <table class="form-list">
            <tr>
              <td class="label">Total work hours:</td>
              <td class="value"><%= @project.total_work_hours %></td>
            </tr>
            <tr>
              <td class="label">Created:</td>
              <td class="value"><%= @project.created %></td>
            </tr>
            <tr>
              <td class="label">Deadline:</td>
              <td class="value"><%= @project.deadline %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
  <!-- project followers list -->
  <div class="grid block">
    <div class="block-header">
      <div><h4>Followers</h4></div>
      <div class="split-line"></div>
    </div>
    <table>
      <thead>
        <tr class="headings">
          <th>Name</th>
          <th>Work Hours</th>
        </tr>
      </thead>
      <tbody>
        <% @project.users.each_with_index do |user, index| %>
        <tr <% if index%2==0 %>class="even pointer"<% else %>class="pointer"<% end %>>
          <td><%= user.name %></td>
          <td><%= user.project_work_hours @project %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- project phase list -->
  <div class="grid block">
    <div class="block-header">
      <div><h4>Project phase</h4></div>
      <div class="split-line"></div>
    </div>
    <table>
      <thead>
        <tr class="headings">
          <th>Name</th>
          <th>Work Hours</th>
        </tr>
      </thead>
      <tbody>
        <% @project.project_phases.each_with_index do |phase, index| %>
        <tr <% if index%2==0 %>class="even pointer"<% else %>class="pointer"<% end %>>
          <td><%= phase.name %></td>
          <td><%= phase.total_work_hours %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Back', projects_path %>
</div>
