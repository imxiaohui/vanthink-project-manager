<div class="view-wrapper">
  <div class="view block">
    <div class="system-info">
      <p id="notice"><%= notice %></p>
    </div>
    <div class="block-header">
      <div><h4>Project Phase Info</h4></div>
      <div class="split-line"></div>
    </div>
    <div class="box-left">
      <div class="entry-edit">
        <div class="entry-edit-head">
          <h4>Base Info</h4>
        </div>
        <div class="fieldset">
          <table class="form-list">
            <tr>
              <td class="label">Name:</td>
              <td class="value"><%= @project_phase.name %></td>
            </tr>
            <tr>
              <td class="label">Project:</td>
              <td class="value"><%= @project_phase.project.name %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div class="box-right">
      <div class="entry-edit">
        <div class="entry-edit-head">
          <h4>Work Hours</h4>
        </div>
        <div class="fieldset">
          <table class="form-list">
            <tr>
              <td class="label">Total work hours:</td>
              <td class="value"><%= @project_phase.total_work_hours %></td>
            </tr>
            <tr>
              <td class="label">Created:</td>
              <td class="value"><%= @project_phase.created_at %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
  <%= link_to 'Edit', edit_project_phase_path(@project_phase) %> |
  <%= link_to 'Back', project_phases_path %>
</div>
