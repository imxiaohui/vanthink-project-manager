<% content_for :header do %>
<%= javascript_include_tag "jquery_vtgrid" %>
<% end %>
<div class="list-wrapper">
  <div class="grid block">
    <div class="block-header">
      <div><h4>Listing work orders</h4></div>
      <div class="split-line"></div>
    </div>
    <table>
      <thead>
        <tr class="headings">
          <th>Content</th>
          <th>Remark</th>
          <th>Status</th>
          <th>Work hours</th>
          <th>Created</th>
          <th>Project phase</th>
          <th>Project</th>
          <th>User</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @work_orders.each_with_index do |work_order, index| %>
        <tr <% if index%2==0 %>class="even pointer"<% else %>class="pointer"<% end %>>
          <td><%= work_order.content %></td>
          <td><%= work_order.remark %></td>
          <td><%= work_order.status %></td>
          <td><%= work_order.work_hours %></td>
          <td><%= work_order.created %></td>
          <td><%= work_order.project_phase.name %></td>
          <td><%= work_order.project.name %></td>
          <td><%= work_order.user.name %></td>
          <td><%= link_to 'Show', work_order %></td>
          <td><%= link_to 'Edit', edit_work_order_path(work_order) %></td>
          <td><%= link_to 'Destroy', work_order, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="options">
      <ul class="">
        <li class="lf"><%= link_to 'New Work order', new_work_order_path %></li>
      </ul>
    </div>
  </div>
</div>


